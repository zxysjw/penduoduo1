.pinxioaquan{
  width: 750rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items:center;
  text-align:center;
  border-bottom: 2rpx solid #E6E6E6;
}
.flex-item{
  width: calc(750rpx/2);
}
