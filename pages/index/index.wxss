  display: grid;
  /* 确定宫格每个元素的宽度 将屏幕宽度填满后 然后换行 */
  grid-template-columns: repeat(auto-fill, 20%);

}
.gonggeitem{
  width: 20%;
}
.gonggeimage{
width: calc(750rpx/8);
margin-left: 30rpx;
}
