/* pages/liaotian/index.wxss */
.liaotian{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.liaotian-item{
  width: 100%;
  height: 80rpx;
 padding: 40rpx;
  border: 5rpx solid #DDDDDD;
}
.liaotian-item-image{
  width: 100rpx;
  float: left;
  height: 100rpx;
}
.liaotian-item-text{
  display: flex;
  flex-direction: column;
  float: left;
  margin-left: 40rpx;
}
.liaotian-item-text1{
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.liaotian-item-text2{
  color: #B3B3B3;
}
.jinxuan{
  width: 100%;
}
.jinxuan-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 20rpx;
  border-bottom: solid #B3B3B3;
}
.jinxuan-item-image{
  width: 50rpx;
  float: left;
}
.jinxuan-item-text{
  /* width: 50rpx; */
  float: left;
  margin-left: 20rpx;
}
.jinxuan-item2{
  width: 50%;
   display: grid;
  grid-template-columns: repeat(2,1fr); 
  /* justify-content: center; */
}
.shangping{
  width: calc(750rpx/2);
 border-bottom: 10rpx solid #DDDDDD;
 border-left: 10rpx solid #DDDDDD ;
}
.jinxuan-item2-image{
  width: 300rpx;
  padding: 20rpx;
  /* float: left; */
}
.jinxuan-item2-text{
  /* float: left; */
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.jinxuan-item2-text1{
  color: red;
}
.jinxuan-item2-text2{
  /* height: 50rpx; */
